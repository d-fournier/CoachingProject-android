<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_item_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/group_item_sport"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/group_item_description"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:lines="1" />


        <TextView
            android:id="@+id/group_item_members"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_drawable_height"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/ic_group_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_group_24dp"
            android:drawableTint="@color/colorAccent"
            android:gravity="center_vertical" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_accept_invite"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/standard_image_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/refuse"
        android:src="@drawable/ic_accept_36dp" />

    <ImageButton
        android:id="@+id/button_refuse_invite"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="@dimen/standard_image_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/accept"
        android:src="@drawable/ic_refuse_36dp" />

</LinearLayout>
