<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_picture"
        android:layout_width="@dimen/relation_list_profile_picture_size"
        android:layout_height="@dimen/relation_list_profile_picture_size"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_image_white_bkg"
        android:transitionName="@string/transition_relation_picture"
        android:contentDescription="@string/user_profile_picture"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_toRightOf="@id/user_picture"
        android:layout_toEndOf="@id/user_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_description"
        android:layout_below="@id/user_name"
        android:layout_toRightOf="@id/user_picture"
        android:layout_toEndOf="@id/user_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>