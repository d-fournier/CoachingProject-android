<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_relation_chat"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fr.sims.coachingproject.ui.view.ContextMenuRecyclerView
            android:id="@+id/message_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/message_list_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="@dimen/standard_margin"
                    android:paddingBottom="@dimen/standard_margin"
                    android:paddingLeft="@dimen/standard_margin"
                    android:paddingRight="@dimen/standard_margin">
                    <ImageView
                        android:src="@drawable/ic_email_200dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:tint="#9e9e9e"/>
                    <TextView
                        android:layout_marginTop="@dimen/standard_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:text="@string/message_list_empty_title"/>
                </LinearLayout>
            </ScrollView>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>

</android.support.v4.widget.SwipeRefreshLayout>
