<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.sims.coachingproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CoachingProjectApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="coachingproject.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="fr.sims.coachingproject.model.UserProfile,fr.sims.coachingproject.model.CoachingRelation,fr.sims.coachingproject.model.Sport,fr.sims.coachingproject.model.SportLevel,fr.sims.coachingproject.model.UserSportLevel" />

        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.ProfileActivity" />

        <service
            android:name=".NetworkService"
            android:exported="false" />

        <activity

            android:name=".ui.activity.SearchActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="ui.activity.ANOTHER_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/title_activity_login"/>

    </application>

</manifest>
